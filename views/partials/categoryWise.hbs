<div class="card-container">
        {{#each  products as |category| }}
                <h2>{{@key}}</h2>
                <div class="product-list-cat">
                    {{#each category as |product|}}
                    <div class="card">
                    <div class="card-image">
                        <img src="{{product.imageUrl}}" alt="ProductImage">
                    </div>
                    <div class="card-content">
                        <ul>
                            <li><strong>Name:</strong> {{product.name}}</li>
                            <li><strong>Price: </strong>{{product.price}}</li>
                            <li><strong>Description:</strong> {{product.description}}</li>
                            <li><strong>Seller:</strong>  {{product.seller}}</li>
                            
                                <div class="button-group">
                                    <button><a href="/admin/product/update/{{product._id}}">
                                    üìù
                                    </a></button>
                                    <button><a href="/admin/product/delete/{{product._id}}">
                                    üóë
                                    </a></button>
                                </div>
                            
                        </ul>
                    </div>
                </div>
                    {{/each}}
                </div>
        {{/each}}
    </div>